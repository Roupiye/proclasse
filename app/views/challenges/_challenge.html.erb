<div id="<%= dom_id challenge %>">
  <div class="flex justify-center text-4xl font-bold items-end">
    <%= challenge.title %>
  </div>
  <div class="text-center flex justify-center">
    <%= challenge.difficulty %>
  </div>

  <div class="h-fit">
    <%= challenge.problem %>
  </div>

  <% if Current.user.can_edit_challenge?(@challenge) %>
    <div class="flex justify-center text-2xl font-semibold items-end text-black/70">
      Testes
    </div>

    <% @challenge.tests.each do |test| %>
      <div class="mt-4 w-full <%= card_style %> px-4 py-2">
        <% if test.hidden? %>
          <p class="float-right font-bold text-black/60">
            Oculto
          </p>
        <% end %>
        <p>
          Entrada:
        </p>
        <pre class="block"><%= test.input%></pre>
        <p>
          SaÃ­da esperada:
        </p>
        <pre class="block"><%= test.expected_out%></pre>
      </div>
    <% end %>
  <% end %>
</div>
