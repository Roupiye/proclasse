<% if Current.user.can_edit_challenge?(@challenge) %>
  <div class="flex justify-between items-center mb-10">
    <h1 class="text-4xl font-bold">Dados desafio</h1>
    <div>
      <%= link_to "Voltar", challenges_path, class: "btn btn-secondary" %>
      <%= link_to "Deletar", @challenge, data: { "turbo-method": :delete, turbo_confirm: "Deseja deletar desafio?"}, class: "btn btn-error" %>
      <%= link_to "Editar", edit_challenge_path(@challenge), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="divider mb-6"></div>
<% end %>

<%= render @challenge %>
